#pragma config(I2C_Usage, I2C1, i2cSensors)
#pragma config(Sensor, in1,    xAccel,         sensorAccelerometer)
#pragma config(Sensor, in2,    yAccel,         sensorAccelerometer)
#pragma config(Sensor, dgtl1,  startButton,    sensorTouch)
#pragma config(Sensor, I2C_1,  ,               sensorQuadEncoderOnI2CPort,    , AutoAssign )
#pragma config(Motor,  port1,           motor1,        tmotorVex269_HBridge, openLoop)
#pragma config(Motor,  port2,           motor2,        tmotorVex269_MC29, openLoop, reversed)
#pragma config(Motor,  port3,           motor3,        tmotorVex269_MC29, openLoop, reversed, encoderPort, I2C_1)
//*!!Code automatically generated by 'ROBOTC' configuration wizard               !!*//

task main()
{
    while (1==1)
{

    untilBump(startButton, 0);
    wait(.5);
      
    //go forward for 1 second
    startMotor(motor1, -90);
    startMotor(motor2, -90);
    
    stopMotor(motor1);
    stopMotor(motor2);
    wait(.5);


    //turn
    
    resetMotorEncoder(motor3);

    while (getMotorEncoder(motor3) < 700)
    {
        startMotor(motor3, 60);
        startMotor(motor2, -60);
        startMotor(motor1, 0);
   }

    stopMotor(motor3);
    stopMotor(motor2);
    stopMotor(motor1);
    wait(.5);

    //return trip
    startMotor(motor1, -127);
    startMotor(motor2, -127);
    wait(1);
    stopMotor(motor1);
    stopMotor(motor2);

  }
}

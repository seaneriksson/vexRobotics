#pragma config(Sensor, in1,    xAccel,         sensorAccelerometer)
#pragma config(Sensor, in2,    yAccel,         sensorAccelerometer)
#pragma config(Sensor, dgtl1,  startButton,    sensorTouch)
#pragma config(Motor,  port1,           motor1,        tmotorVex269_HBridge, openLoop)
#pragma config(Motor,  port2,           motor2,        tmotorVex269_MC29, openLoop)
#pragma config(Motor,  port3,           motor3,        tmotorVex269_MC29, openLoop)
//*!!Code automatically generated by 'ROBOTC' configuration wizard               !!*//



int currentX;
float convertToGs = .00479;
float currentGs;
float distance;
float totalDistance;
int counter = 0;


task main()
{

    distance = 0;
  totalDistance = 0;
  untilBump(startButton, 0);
    wait(1);

    int xBias = abs(SensorValue[xAccel]);

    startMotor(motor1, 70);
    startMotor(motor2, -70);

    do
    {
        currentX = abs(SensorValue[xAccel]) - xBias;

        currentX = abs(currentX);

        currentGs = currentX * convertToGs;

        distance = currentX * .1 * .1;

        totalDistance = totalDistance + distance;

        counter = counter + 1;

        wait(0.1);
    }

    while(totalDistance < 5.0);


    stopMotor(motor1);
    stopMotor(motor2);


}
